<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level1">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gameGrid"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:background="#CCCCCC"
        app:columnCount="5"
        app:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <!-- ImageView 1 -->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/element_1x3"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnSpan="2"/>

    <!-- ImageView 2 -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:src="@drawable/cheese"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="2"
        app:layout_row="0"
        app:layout_rowSpan="2" />

    <!-- ImageView 3 -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="75dp"
        android:layout_height="300dp"
        android:src="@drawable/element_1x3"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="0"
        app:layout_row="1"
        app:layout_rowSpan="4"/>

    <!-- ImageView 4 -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="75dp"
        android:layout_height="225dp"
        android:src="@drawable/element_1x3"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="1"
        app:layout_row="1"
        app:layout_rowSpan="3" />

    <!-- ImageView 5 -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:src="@drawable/element_1x3"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="1"
        app:layout_row="4"
        app:layout_columnSpan="4" />

    <!-- ImageView 6 -->
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/element_1x4"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="3"
        app:layout_columnSpan="2"
        app:layout_row="1" /> <!-- Row index -->

    <!-- ImageView 7 -->
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:src="@drawable/element_1x4"
        android:background="@drawable/element_1x2"
        android:padding="5dp"
        app:layout_column="3"
        app:layout_rowSpan="2"
        app:layout_row="2" /> <!-- Row index -->

    <!-- Add more ImageViews here with layout_column and layout_row attributes to specify their positions -->
</androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
